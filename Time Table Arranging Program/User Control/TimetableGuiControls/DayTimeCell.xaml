<UserControl x:Class="Time_Table_Arranging_Program.User_Control.TimetableGuiControls.DayTimeCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Time_Table_Arranging_Program.User_Control.TimetableGuiControls"
             mc:Ignorable="d" >
    <Grid>
        <TextBlock FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">DAY</TextBlock>
        <TextBlock FontWeight="DemiBold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">TIME</TextBlock>
        <Polygon x:Name="BottomLeft" Points="0 59, 100 59, 0 0"
                         Stroke="Black" StrokeThickness="1" />
        <Polygon x:Name="TopRight" Points="0 0, 100 0, 100 59"
                         Stroke="Black" StrokeThickness="1" />
    </Grid>
</UserControl>
