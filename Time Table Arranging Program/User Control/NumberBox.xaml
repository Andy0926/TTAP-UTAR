<UserControl x:Class="Time_Table_Arranging_Program.User_Control.NumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Time_Table_Arranging_Program.User_Control"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="TextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MinWidth="30"
                 PreviewTextInput="TextBox_OnPreviewTextInput" KeyUp="TextBox_OnKeyUp"
                 GotFocus="TextBox_OnGotFocus" LostFocus="TextBox_OnLostFocus" Text="20" />
        <Button Style="{x:Null}" x:Name="OkButton" Click="OkButton_OnClick" Visibility="Hidden">OK</Button>
    </StackPanel>
</UserControl>