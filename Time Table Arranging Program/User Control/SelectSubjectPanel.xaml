<UserControl x:Class="Time_Table_Arranging_Program.User_Control.SelectSubjectPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Time_Table_Arranging_Program.User_Control"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" KeyDown="SelectSubjectPanel_OnKeyDown"   FocusManager.IsFocusScope="True" FocusManager.FocusedElement="{Binding ElementName=SearchBox}"
             >
    <Expander x:Name="SubjectExpander" VerticalContentAlignment="Stretch"  ExpandDirection="Left" DockPanel.Dock="Left" VerticalAlignment="Stretch" IsExpanded="True">
        <Expander.Header>
            <TextBlock Text="Select subjects" RenderTransformOrigin=".5,.5">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="90" />
                </TextBlock.LayoutTransform>
            </TextBlock>
        </Expander.Header>
        <DockPanel LastChildFill="True" >
            <DockPanel LastChildFill="True"  DockPanel.Dock="Top">

                <ToggleButton x:Name="ToggleViewButton" Visibility="Collapsed" Margin="5"  Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}" DockPanel.Dock="Left" HorizontalAlignment="Center"  ToolTip="Show selected subject only" Checked="ToggleViewButton_OnChecked" Unchecked="ToggleViewButton_OnUnchecked" IsEnabled="False">
                    <materialDesign:PackIcon Kind="Eye" Height="20" Width="20"/>
                </ToggleButton>
                <local:SearchBox x:Name="SearchBox"  TextChanged="SearchBoxOnTextChanged" GotFocus="SearchBox_OnGotFocus"/>
            </DockPanel>
            <Separator />
            <Grid DockPanel.Dock="Top">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="Margin" Value="10" />
                    </Style>
                </Grid.Resources>
                <StackPanel x:Name="FeedbackPanel"  Orientation="Horizontal" Visibility="Collapsed" Margin="10">
                    <TextBlock x:Name="FeedbackTextBlock" Text="Showing result for  " />
                    <TextBlock  Text="Accounting" FontStyle="Italic" FontWeight="Bold" x:Name="SuggestedTextLabel" />
                    <Button Click="YesButton_OnClick" Visibility="Collapsed">YES</Button>
                </StackPanel>
                <TextBlock x:Name="ErrorLabel" FontWeight="Bold" Visibility="Collapsed">No result found . . .</TextBlock>
            </Grid>
            <Button x:Name="ViewChangerButton" Margin="10" Height="50" VerticalAlignment="Bottom" Click="ViewChangerButton_OnClick" DockPanel.Dock="Bottom">
                Show selected subjects
            </Button>
            <Border BorderBrush="DarkGray" BorderThickness="0.5" VerticalAlignment="Stretch" DockPanel.Dock="Bottom">
                <ScrollViewer x:Name="SelectSubjectScrollViewer"  FlowDirection="LeftToRight"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Hidden"  ToolTipService.ShowOnDisabled="True" ToolTipService.InitialShowDelay="0">

                    <StackPanel FlowDirection="LeftToRight" Name="CheckerBoxStackPanel" HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                CanVerticallyScroll="True" Margin="1" />
                </ScrollViewer>
            </Border>

        </DockPanel>
    </Expander>
</UserControl>

