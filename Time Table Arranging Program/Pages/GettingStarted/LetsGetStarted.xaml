<UserControl x:Class="Time_Table_Arranging_Program.Pages.GettingStarted.LetsGetStarted"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Time_Table_Arranging_Program.Pages.GettingStarted"
             xmlns:pageGettingStarted="clr-namespace:Time_Table_Arranging_Program.Pages.Page_GettingStarted"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <materialDesign:Card Padding="40">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource  MaterialDesignDisplay4TextBlock}">Let's get started.</TextBlock>
            <Button Click="ButtonBase_OnClick" FontSize="20" HorizontalAlignment="Center" Height="60" Width="100"
                    Style="{StaticResource MaterialDesignRaisedButton}" Margin="0 10 10 0">
                GO
            </Button>
        </StackPanel>
    </materialDesign:Card>
</UserControl>