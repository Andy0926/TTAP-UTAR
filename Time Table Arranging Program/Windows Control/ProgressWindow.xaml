<Window x:Class="Time_Table_Arranging_Program.Windows_Control.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Time_Table_Arranging_Program.Windows_Control"
        mc:Ignorable="d"
        WindowStyle="None"
        Width="400" Height="200" Title="Loading . . ." WindowStartupLocation="Manual" Top="10">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label FontSize="20" FontWeight="Bold" x:Name="MessageLabel">Finding possible timetables . . .</Label>
        <Label />
        <ProgressBar x:Name="ProgressBar" Height="10" Width="300" IsIndeterminate="True" />
        <Label />
        <Button x:Name="CancelButton" Visibility="Collapsed" HorizontalAlignment="Center" Width="200"
                Click="CancelButton_Click">
            Cancel
        </Button>
    </StackPanel>
</Window>